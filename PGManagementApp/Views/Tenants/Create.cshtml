@model Data.ViewModels.TenantsDb
@using static Data.ApplicationEnums;

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-4">
        <h4>Create Tenant</h4>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <a asp-action="Index">Back to List</a>
    </div>
</div>

<hr />
<form asp-action="Create">
    <div class="row" style="overflow-y: scroll;">
        <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenantName" class="control-label"></label>
                <input asp-for="TenantName" class="form-control" />
                <span asp-validation-for="TenantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MobileNo" class="control-label"></label>
                <input asp-for="MobileNo" class="form-control" />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                <input asp-for="EmailId" class="form-control" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoUrl" class="control-label"></label>
                <input asp-for="PhotoUrl" class="form-control" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProofName" class="control-label"></label>
                <select asp-for="ProofName" class="form-control" asp-items="Html.GetEnumSelectList<ProofName>()"></select>
                <span asp-validation-for="ProofName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProofId" class="control-label"></label>
                <input asp-for="ProofId" class="form-control" />
                <span asp-validation-for="ProofId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsCoLiveIn" class="control-label"></label>
                <select asp-for="IsCoLiveIn" class="form-control" asp-items="Html.GetEnumSelectList<LiveType>()"></select>
                <span asp-validation-for="IsCoLiveIn" class="text-danger"></span>
            </div>


        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Designation" class="control-label"></label>
                <select asp-for="Designation" class="form-control" asp-items="Html.GetEnumSelectList<Designation>()"></select>
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfficeAddress" class="control-label"></label>
                <input asp-for="OfficeAddress" class="form-control" />
                <span asp-validation-for="OfficeAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeAddress" class="control-label"></label>
                <input asp-for="HomeAddress" class="form-control" />
                <span asp-validation-for="HomeAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisteredDate" class="control-label"></label>
                <input asp-for="RegisteredDate" class="form-control" />
                <span asp-validation-for="RegisteredDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonthlyFee" class="control-label"></label>
                <input asp-for="MonthlyFee" class="form-control" />
                <span asp-validation-for="MonthlyFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentUrl" class="control-label"></label>
                <input asp-for="DocumentUrl" class="form-control" />
                <span asp-validation-for="DocumentUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrimaryTenant" class="control-label"></label>
                <select asp-for="PrimaryTenant" class="form-control" asp-items="ViewBag.PrimaryTenant"></select>
                <span asp-validation-for="PrimaryTenant" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkRoomId" class="control-label"></label>
                <select asp-for="FkRoomId" class="form-control" asp-items="ViewBag.FkRoomId"></select>
                <span asp-validation-for="FkRoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodCard" class="control-label"></label>
                <select asp-for="FoodCard" class="form-control" asp-items="Html.GetEnumSelectList<FoodCard>()"></select>
                <span asp-validation-for="FoodCard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodCardAmount" class="control-label"></label>
                <input asp-for="FoodCardAmount" class="form-control" />
                <span asp-validation-for="FoodCardAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdvancePayment" class="control-label"></label>
                <input asp-for="AdvancePayment" class="form-control" />
                <span asp-validation-for="AdvancePayment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdjustMonth" class="control-label"></label>
                <input asp-for="AdjustMonth" type="checkbox" value="false" class="form-check" />
                <span asp-validation-for="AdjustMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>

    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $(function () {
                $("#FkRoomId").select2();
            });
        });

    </script>
}
